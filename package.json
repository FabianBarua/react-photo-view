{
  "name": "react-photo-view",
  "version": "1.0.0-beta.4",
  "description": "An exquisite React photo preview component",
  "author": "MinJieLiu",
  "license": "Apache-2.0",
  "repository": "https://github.com/MinJieLiu/react-photo-view.git",
  "source": "src/index.ts",
  "main": "./dist/react-photo-view.js",
  "module": "./dist/react-photo-view.module.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "react",
    "react component",
    "react photo",
    "react-photo-view",
    "photo",
    "image",
    "photo preview",
    "image preview",
    "gallery",
    "carousel"
  ],
  "scripts": {
    "dev": "pnpm -C ./example dev",
    "build": "rimraf ./dist && microbundle --jsx React.createElement --external react,react-dom --format cjs,esm,modern",
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "lint": "npm run lint:js && npm run lint:prettier",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty src/ --fix",
    "lint:prettier": "prettier --check \"**/*\" --end-of-line auto --write",
    "lint:style": "stylelint --fix \"**/*.less\" --syntax less",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{js,jsx,ts,tsx}": "eslint --fix --ext .js,.jsx,.ts,.tsx",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@umijs/fabric": "^2.10.1",
    "husky": "^7.0.4",
    "less": "^4.1.2",
    "lint-staged": "^12.3.3",
    "microbundle": "^0.14.2",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  },
  "files": [
    "dist"
  ]
}
